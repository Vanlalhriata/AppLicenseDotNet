<Window x:Class="LicenseGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Makkati License Generator" Width="800" Height="600">
    <Grid>

        <StackPanel HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Machine ID:" HorizontalAlignment="Center"/>
            <TextBox x:Name="machineIdTextBox" Width="300" TextAlignment="Center"/>
            <Rectangle Height="20"/>
            <TextBlock Text="Private key XML string:" HorizontalAlignment="Center"/>
            <TextBox x:Name="privateKeyTextBox" Width="300" TextAlignment="Center"/>
            <Button Width="100" Height="40" Margin="0 30" Content="Generate" Click="Generate_Click"/>
            <Separator/>
            <TextBlock Text="Status:" HorizontalAlignment="Center" Margin="0 20 0 0"/>
            <TextBlock Text="Waiting for input" x:Name="statusText"
                       HorizontalAlignment="Center" MaxWidth="300" TextWrapping="Wrap"/>
        </StackPanel>

    </Grid>
</Window>
